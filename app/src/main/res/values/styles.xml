<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="paint_menu_text_view_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_menu_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="menu_pen_anim">
        <item name="android:windowEnterAnimation">@anim/pen_in</item>
        <item name="android:windowExitAnimation">@anim/pen_out</item>
    </style>
</resources>
